{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages",
    "lint:test": "eslint --ext .js,.jsx,.ts,.tsx,.vue test",
    "prepare": "husky install",
    "release": "npm run lint && lerna publish"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "!(test)/**/*.js": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/config-lerna-scopes": "^16.2.2",
    "@meteorlxy/eslint-config-prettier": "file:./packages/eslint-config-prettier",
    "@meteorlxy/eslint-config-prettier-react": "file:./packages/eslint-config-prettier-react",
    "@meteorlxy/eslint-config-prettier-typescript-react": "file:./packages/eslint-config-prettier-typescript-react",
    "@meteorlxy/eslint-config-prettier-typescript-vue": "file:./packages/eslint-config-prettier-typescript-vue",
    "@meteorlxy/prettier-config": "file:./packages/prettier-config",
    "@meteorlxy/tsconfig": "file:./packages/tsconfig",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.55.0",
    "typescript": "^4.6.3"
  }
}
