{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages",
    "lint:test": "eslint --ext .js,.jsx,.ts,.tsx,.vue test",
    "prepare": "husky install",
    "release": "npm run lint && lerna publish"
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "!(test)/**/*.js": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@lerna-lite/cli": "^1.3.0",
    "@meteorlxy/eslint-config-prettier": "workspace:*",
    "@meteorlxy/eslint-config-prettier-react": "workspace:*",
    "@meteorlxy/eslint-config-prettier-typescript-react": "workspace:*",
    "@meteorlxy/eslint-config-prettier-typescript-vue": "workspace:*",
    "@meteorlxy/prettier-config": "workspace:*",
    "@meteorlxy/tsconfig": "workspace:*",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.57.0",
    "typescript": "^4.7.2"
  }
}
