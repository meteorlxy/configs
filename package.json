{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages",
    "release": "yarn lint && lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": "@meteorlxy/prettier-config",
  "eslintConfig": {
    "extends": "@meteorlxy/prettier",
    "root": true
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@meteorlxy/eslint-config-prettier": "^0.1.0",
    "@meteorlxy/prettier-config": "^0.1.0",
    "eslint": "^6.2.1",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "sort-package-json": "^1.22.1"
  }
}
