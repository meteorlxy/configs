{
  "name": "@meteorlxy/eslint-config",
  "version": "6.6.0",
  "description": "meteorlxy eslint config",
  "keywords": [
    "config",
    "eslint",
    "meteorlxy"
  ],
  "homepage": "https://github.com/meteorlxy/configs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/configs.git"
  },
  "license": "MIT",
  "author": "meteorlxy <meteor.lxy@foxmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "tsdown",
    "check-rules": "tsx ./scripts/check-rules-coverage.ts",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "catalog:prod",
    "@typescript-eslint/parser": "catalog:prod",
    "@typescript-eslint/utils": "catalog:prod",
    "confusing-browser-globals": "catalog:prod",
    "eslint-config-flat-gitignore": "catalog:prod",
    "eslint-config-prettier": "catalog:prod",
    "eslint-plugin-eslint-comments": "catalog:prod",
    "eslint-plugin-import-x": "catalog:prod",
    "eslint-plugin-jsonc": "catalog:prod",
    "eslint-plugin-markdown": "catalog:prod",
    "globals": "catalog:prod",
    "jsonc-eslint-parser": "catalog:prod"
  },
  "devDependencies": {
    "@types/confusing-browser-globals": "catalog:dev",
    "@types/eslint": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-react": "catalog:peer",
    "eslint-plugin-react-hooks": "catalog:peer",
    "eslint-plugin-react-refresh": "catalog:peer",
    "eslint-plugin-vue": "catalog:peer",
    "tsdown": "catalog:dev",
    "vue-eslint-parser": "catalog:peer"
  },
  "peerDependencies": {
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-vue": "^10.0.0",
    "vue-eslint-parser": "^10.1.3"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-react-refresh": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
